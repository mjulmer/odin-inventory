html 
  head 
    title= category.name 
  body 
    h1= category.name  
    a(href="./" + category.id + "/edit") Edit category details 
    
    p= category.desc
    ul
      each item in categoryItems 
        li
          p= item.name 
          p= "Quantity: " + item.quantity
          a(href="/item/" + item.id) View item details

    form(action="./" + category.id + "/delete", method="post") 
      button Delete category
